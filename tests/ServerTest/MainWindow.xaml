<Window x:Name="winMain" x:Class="ServerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="서버 테스트" Width="500" Height="600" Closing="winMain_Closing">
    <Canvas>
        <Label Content="서버포트" Canvas.Left="10" Canvas.Top="10"/>
        <TextBox x:Name="txtServerPort" Height="23" Canvas.Left="82" Text="8010" Canvas.Top="14" Width="60" />
        <Button x:Name="btnOpenClose" Content="시작" Canvas.Left="163" Canvas.Top="14" Width="75" Click="btnOpenClose_Click"/>
        <Label Content="상태정보" Canvas.Left="10" Canvas.Top="51"/>
        <ListBox x:Name="listBoxStatus" Height="166" Canvas.Left="10" Canvas.Top="82" Width="461"/>
        <Label Content="수신데이터" Canvas.Left="10" Canvas.Top="271"/>
        <TextBox x:Name="txtReceiveData" Height="219" Canvas.Left="10" Canvas.Top="302" Width="461" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnStatusClear" Content="Clear" Canvas.Left="396" Canvas.Top="54" Width="75" Click="btnStatusClear_Click"/>
        <Button x:Name="btnReceiveDataClear" Content="Clear" Canvas.Left="396" Canvas.Top="274" Width="75" Click="btnReceiveDataClear_Click"/>
    </Canvas>
</Window>
